{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "main",
    "test"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchBaseBranches": ["test"]
    },
    {
      "groupName": "all non-major updates",
      "groupSlug": "patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchBaseBranches": ["main"]
    },
    {
      "matchPackageNames": ["mongo"],
      "allowedVersions": "<=4.4"
    }
  ]
}
